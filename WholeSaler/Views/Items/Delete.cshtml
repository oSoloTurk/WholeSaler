@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model WholeSaler.Models.Item

@{
    ViewData["Title"] = "Delete";
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>Item@Localizer["About"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemDesc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryID)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ItemID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["Back to List"]</a>
    </form>
</div>
