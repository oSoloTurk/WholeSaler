@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using WholeSaler.Resources
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@using WholeSaler.Utils
@model PaginatedList<WholeSaler.Models.Item>
@using WholeSaler.Resources
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = "Items";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex justify-content-between">
            <a asp-action="Create" class="btn btn-primary btn-icon-split float-right">
                <span class="icon text-white-50">
                    <i class="fas fa-flag"></i>
                </span>
                <span class="text">@SharedLocalizer["Add Item"]</span>
            </a>
            <h6 class="m-0 font-weight-bold text-primary align-self-center">
                @ViewData["Title"]
            </h6>
            <div></div>
            <div></div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <a asp-route-sortOrder="item_name">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().ItemName)
                            </a>
                        </th>
                        <th>
                            <a asp-route-sortOrder="item_price">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().ItemPrice)
                            </a>
                        </th>
                        <th>
                            <a asp-route-sortOrder="item_desc">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().ItemDesc)
                            </a>
                        </th>
                        <th>
                            <a asp-route-sortOrder="item_category">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().Category)
                            </a>
                        </th>
                        <th>
                            @SharedLocalizer["Actions"]
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemDesc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.CategoryName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ItemID">@SharedLocalizer["Edit"]</a> |
                                <a asp-action="Details" asp-route-id="@item.ItemID">@SharedLocalizer["Details"]</a> |
                                <a asp-action="Delete" asp-route-id="@item.ItemID">@SharedLocalizer["Delete"]</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }

        </div><div class="row justify-content-center">

            <a asp-action="Index"
               asp-route-pageSize="@ViewData["CurrentSize"]"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn btn-primary mr-1 @prevDisabled">
                @SharedLocalizer["Back"]
            </a>


            <select class="custom-select custom-select-sm form-control form-control-sm col-sm-1" aria-label=".form-select-lg example" onchange="javascript:pageSizeChange(this)">
                @foreach (int index in Enumerable.Range(1, 10))
                {
                    int value = index * 10;
                    @if (Model.CurrentPageSize == value)
                    {
                        <option selected value="@value">
                            <a class="dropdown-item btn btn-primary" asp-action="Index"
                               asp-route-pageSize="@value"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-pageNumber="@ViewData["CurrentPage"]"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]">@value</a>
                        </option>
                    }
                    else
                    {
                        <option value="@value">
                            <a class="dropdown-item btn btn-primary" asp-action="Index"
                               asp-route-pageSize="@value"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-pageNumber="@ViewData["CurrentPage"]"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]">@value</a>
                        </option>
                    }

                }
            </select>
            <a asp-action="Index"
               asp-route-pageSize="@ViewData["CurrentSize"]"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@ViewData["CurrentSize"]"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               hidden
               id="applyPageSizeChange"
               class="btn btn-primary ml-1">
                @ViewData["CurrentSize"]
            </a>
            <a asp-action="Index"
               asp-route-pageSize="@ViewData["CurrentSize"]"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn btn-primary ml-1 @nextDisabled">
                @SharedLocalizer["Next"]
            </a>
        </div>
    </div>
</div>

<script src="~/js/data_table.js"></script>