@model IEnumerable<WholeSaler.Models.Vehicle>

@{
    ViewData["Title"] = "Vehicles";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex justify-content-between">
            <a asp-action="Create" class="btn btn-primary btn-icon-split float-right">
                <span class="icon text-white-50">
                    <i class="fas fa-flag"></i>
                </span>
                <span class="text">Add Vehicle</span>
            </a>
            <h6 class="m-0 font-weight-bold text-primary align-self-center">
                @ViewData["Title"]
            </h6>
            <div></div>
            <div></div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <a asp-route-sortOrder="vehicle_name">
                                @Html.DisplayNameFor(model => model.VehicleName)
                                </a>
                        </th>
                        <th>
                            <a asp-route-sortOrder="vehicle_plate">
                                @Html.DisplayNameFor(model => model.VehiclePlate)
                                </a>
                        </th>
                        <th>Current Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        ViewBag.OperationStatus = ViewBag.vehiclesInTheOperation.Contains(item.VehicleID);
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.VehicleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VehiclePlate)
                            </td>
                            <td>
                                @{
                                    if (ViewBag.OperationStatus)
                                    {
                                        <span class="text-success">Vehicle is currently operation.</span>
                                    }
                                    else
                                    { 
                                        <span class="text-warning">Vehicle is not in active operation!</span>
                                    }
                               }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.VehicleID">Edit</a>
                                | <a asp-action="Delete" asp-route-id="@item.VehicleID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
