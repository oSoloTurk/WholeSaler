@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using WholeSaler.Resources
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@model WholeSaler.Models.Vehicle


<form asp-action="Delete">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-flex justify-content-between">
                <a class="btn btn-secondary btn-icon-split" asp-action="Index">
                    <span class="icon text-white-50">
                        <i class="fas fa-arrow-left"></i>
                    </span>
                    <span class="text">@SharedLocalizer["Back to List"]</span>
                </a>
                <h6 class="m-0 font-weight-bold text-primary align-self-center">
                    @SharedLocalizer["Are you sure you want to delete this?"]
                </h6>
                <div>
                    <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-danger" />
                </div>
            </div>
        </div>
        <div class="card-body">
            <center>
                <h4>@SharedLocalizer["Vehicle"]</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.VehicleName)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.VehicleName)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.VehiclePlate)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.VehiclePlate)
                    </dd>
                </dl>
                <input type="hidden" asp-for="VehicleID" />
            </center>
        </div>
    </div>
</form>