@using WholeSaler.Utils
@model PaginatedList<WholeSaler.Models.Operation>

@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex justify-content-between">
            <a asp-action="Create" class="btn btn-primary btn-icon-split float-right">
                <span class="icon text-white-50">
                    <i class="fas fa-flag"></i>
                </span>
                <span class="text">Add Item</span>
            </a>
            <h6 class="m-0 font-weight-bold text-primary align-self-center">
                @ViewData["Title"]
            </h6>
            <div></div>
            <div></div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Basket)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Location)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().OperationValue)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Basket.UserID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date.DateID)
                            </td>
                            <td>
                                @item.Location.GetFullAdress()
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OperationValue)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.OperationID">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.OperationID">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.OperationID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }
        </div>
        <div class="row justify-content-center">

            <a asp-action="Index"
               asp-route-pageSize="@ViewData["CurrentSize"]"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn btn-primary mr-1 @prevDisabled">
                Önceki
            </a>

            <select class="custom-select custom-select-sm form-control form-control-sm col-sm-1" aria-label=".form-select-lg example" onchange="javascript:pageSizeChange(this)">
                @foreach (int index in Enumerable.Range(1, 10))
                {
                    int value = index * 10;
                    <option value="@value">
                        <a class="dropdown-item btn btn-primary" asp-action="Index"
                           asp-route-pageSize="@value"
                           asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@ViewData["CurrentPage"]"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]">@value</a>
                    </option>
                }
            </select>
            <a asp-action="Index"
               asp-route-pageSize="@ViewData["CurrentSize"]"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn btn-primary ml-1 @nextDisabled">
                Sonraki
            </a>
        </div>
    </div>
</div>
