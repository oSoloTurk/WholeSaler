@page
@model LoginModel
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using WholeSaler.Areas.Identity.Pages.Account
@inject IViewLocalizer Localizer
@using WholeSaler.Resources
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@inject IdentityLocalizationService IdentityLocalizer

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-lg-12">
                <div class="p-5">
                    <div class="row d-flex justify-content-around">
                        <img src="~/images/login.png" class="col-md-5 image mt-4 mb-4" />
                        <div class="col-md-5 align-self-center">
                            <section>
                                <form id="account" method="post">
                                    <hr />
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group mb-2">
                                        <label asp-for="Input.Email">@IdentityLocalizer.GetLocalizedHtmlString("Email")</label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Password">@IdentityLocalizer.GetLocalizedHtmlString("Password")</label>
                                        <input asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <div class="checkbox align-self-center">
                                            <label asp-for="Input.RememberMe">
                                                <input asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <button type="submit" class="btn theme-button-success col-6">@Localizer["Log in"]</button>
                                            <a id="forgot-password" class="btn theme-button-warning col-6" asp-page="./ForgotPassword">@Localizer["Forgot your password?"]</a>
                                        </div>
                                        <div class="row">
                                            <a asp-page="./Register" class="btn theme-button-success col-6" asp-route-returnUrl="@Model.ReturnUrl">@Localizer["Register as a new user"]</a>
                                            <a id="resend-confirmation" class="btn theme-button-warning col-6" asp-page="./ResendEmailConfirmation">@Localizer["Resend email confirmation"]</a>
                                        </div>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
